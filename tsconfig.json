{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@__dir/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
